root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{java,kt,xml,yml,yaml}]
indent_size = 2

[*.{ts,tsx,js,jsx,json,css,scss,md}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false